# Datatypes in python

name = "Amir"       # Text
age = 18            # Whole Number
grade = 99.97       # Decimal Number
is_student = True   # True / False 
experience = None   # Empty/ No Value

# type() function in python

print(type(name))           # <class 'str'>
print(type(age))            # <class 'int'>
print(type(grade))          # <class 'float'>
print(type(is_student))     # <class 'bool'>
print(type(experience))     # <class 'NoneType'>